<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center">
    <FrameLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:visibility="gone" android:id="@+id/flayout">
        <android.webkit.WebView android:visibility="gone" android:id="@+id/lwebview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ff000000"></android.webkit.WebView>
        <Button android:layout_height="wrap_content" android:id="@+id/lbutton" android:layout_width="wrap_content" android:layout_gravity="bottom|center_horizontal" android:background="@drawable/download" android:layout_marginBottom="20dip" android:visibility="gone"></Button>
        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="top|right" android:src="@drawable/new1" android:layout_marginRight="10dip" android:layout_marginTop="10dip" android:visibility="gone" android:id="@+id/inewimage"></ImageView>
	    <ProgressBar android:id="@+id/lprogressBar" style="?android:attr/progressBarStyleHorizontal" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_margin="10dip" android:layout_gravity="bottom|center_horizontal" android:visibility="gone"></ProgressBar>
    </FrameLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/idapplayout" android:layout_marginBottom="20dip" android:layout_weight="1" android:gravity="center" android:layout_width="fill_parent">
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/idappname" android:textSize="28dip" android:textColor="#FFF2EACA" android:text="终极找茬"></TextView>
        <TextView android:id="@+id/idappversion" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="10dip" android:textColor="#FFF2EACA" android:text="1.3"></TextView>
    </LinearLayout>
    <ImageView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/ilogo" android:src="@drawable/dx" android:layout_gravity="bottom" android:scaleType="centerInside"></ImageView>
</LinearLayout>
