<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/net.yebaihe.puzzle"
    android:id="@+id/toplevel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/cnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <cn.domob.android.ads.DomobAdView android:layout_width="fill_parent" android:layout_height="wrap_content" myapp:keywords="game" myapp:spots="androidtest" myapp:refreshInterval="20"/>
    </LinearLayout>
</LinearLayout>